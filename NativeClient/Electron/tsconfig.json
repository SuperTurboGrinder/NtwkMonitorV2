{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "module": "commonjs",
    "outDir": "app/js",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ]
}
